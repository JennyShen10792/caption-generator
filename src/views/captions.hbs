	<table class="styled-table">
		<thead>
			<tr>
				<th>All Captions</th>
			</tr>
		</thead>
		<tbody>
			{{#each captions}}
				<tr class="active-row">
					<td>{{this.name}}</td>
					<td><a href="/captions/delete?id={{this.id}}"
							onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
				</tr>
			{{/each}}
		</tbody>
	</table>

	<script src="js/caption.js"></script>

</body>